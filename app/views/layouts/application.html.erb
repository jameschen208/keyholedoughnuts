<!DOCTYPE html>
<html>
<head>
  <title>Keyhole</title>
  <%= favicon_link_tag "keyholeicon.png" %>
<!-- mobile -->
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no"/>
<!--   fontawesome -->
  	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<!-- materialize -->	
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.3/js/materialize.min.js"></script>
<!-- fonts -->
	<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!-- rails -->
	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= csrf_meta_tags %>
</head>

<body>
	<a class="hide-on-large-only"href="<%= root_path %>#" data-activates="mobile-nav" class="button-collapse"><i class="material-icons black-text mobile-menu">menu</i></a>
	<nav class="z-depth-0">
		<div class="nav-wrapper">
			<div class="row keyhole-logo-row">
				<a class="brand-logo center" href="<%= root_path %>"><%= image_tag("keyhole-logo.png", height:"200") %></a>
			</div>
			<div class="row second-row">
				<div class="left leftnav hide-on-med-and-down"></div>
				<ul class="brand-logo center hide-on-med-and-down">
					<li><a href="<%= welcome_about_path %>">ABOUT US</a></li>
					<li><a href="<%= doughnuts_path %>">FLAVORS</a></li>
					<li><a href="<%= welcome_order_path %>">ORDER</a></li>
					<li><a href="<%= welcome_contact_path %>">CONTACT US</a></li>
				</ul>
				<div class="right rightnav hide-on-med-and-down"></div>

				<ul class="side-nav" id="mobile-nav">
					<li><a href="<%= welcome_about_path %>">ABOUT US</a></li>
					<li><a href="<%= doughnuts_path %>">FLAVORS</a></li>
					<li><a href="<%= welcome_order_path %>">ORDER</a></li>
					<li><a href="<%= welcome_contact_path %>">CONTACT US</a></li>
				</ul>
			</div>
		</div>
		<div class="container center-align hide-on-large-only mobile-icons">
			<a href="https://www.facebook.com/keyholedoughnuts/" target="_blank"><i class="fa fa-facebook-official white-text"></i></a>
			<a href="https://instagram.com/keyholedoughnuts/" target="_blank"><i class="fa fa-instagram white-text"></i></a>
			<a href="http://twitter.com/keyholedoughnut" target="_blank"><i class="fa fa-twitter-square white-text"></i></a>
		</div>
	</nav>
	
<%= yield %>
	
	<div class="container hide-on-small-and-down" id="icons">
		<div class="right-align">
			<a href="https://www.facebook.com/keyholedoughnuts/" target="_blank"><i class="social-media fa fa-facebook-official white-text"></i></a>
			<a href="https://instagram.com/keyholedoughnuts/" target="_blank"><i class="social-media fa fa-instagram white-text"></i></a>
			<a href="http://twitter.com/keyholedoughnut" target="_blank"><i class="social-media fa fa-twitter-square white-text"></i></a>

			<% if user_signed_in? %>
				||<%= link_to "sign out", destroy_user_session_path, method: :delete %>
				||<%= link_to "new doughnut", new_doughnut_path %>
			<% end %>
		</div>
	</div>

	<div class="left-doughnut hide-on-small-and-down">
		<%= image_tag("doughnut_background_right", height:"200") %>
	</div>

	<div class="right-doughnut hide-on-small-and-down">
		<%= image_tag("doughnut_background_left", height:"200") %>
	</div>

<!--  Scripts-->
  <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
  <script src="../../dist/js/materialize.js"></script>
  <script src="js/init.js"></script>
</body>
</html>
