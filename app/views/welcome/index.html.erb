<div class="doughnutbox" id="fourth"></div>
<br>

<span id="contact"></span>

<div>
	<div class="container">
		<h1>CONTACT US</h1>
		<hr class="small">
		<hr class="large">
		<div id="email">
			<%= form_tag("/mail", method: "post") do %>
				<%= text_field_tag(:subject,'',:placeholder => "What's the subject of your email?") %>
				<%= text_field_tag(:name,'', :placeholder => "What's your name?") %>
				<%= text_field_tag(:text,'', :placeholder => "Write your text here") %>
				<%= text_field_tag(:email,'', :placeholder => "What's the best email to reach you at? ") %>
				<%= submit_tag("Doughnut be shy, email us!") %>
			<% end %>
		</div>
	</div>
</div>
