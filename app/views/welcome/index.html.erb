<div class="container">
	<h1>Our Pride and Joy</h1>
		<hr class="small">
		<hr class="large">
	<br>
	<div>
		<% @doughnuts.each do |doughnut| %>
			<img class="materialboxed doughnut" data-caption="<%= doughnut.title %>" width="100%" src="<%= doughnut.image.url %>">
		<% end %>
