<div class="clearfix">
 <div class="container">
 	<h1>Doughnut Blog</h1>
	<hr class="small">
	<hr class="large">
    <div class="col s12 m6">
    	<% @posts.each do |post| %>
      <div class="card">
        <div class="card-content">
          <span class="card-title"><%= link_to post.title, post%></span>
          <p><%= post.created_at.strftime('%A, %B %d') %></p>          
        </div>
      </div>
      <% end %>
    </div>
    <hr class="large">
	<hr class="small">
  </div>
